<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_row="0"
        android:text="Date de dÃ©part"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/dateChoiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="9"
        android:layout_gravity="center_horizontal|right"
        android:layout_margin="2dp"
        android:layout_row="0"
        android:onClick="showDatePicker"
        android:text="@string/pick_date" />

    <TextView
        android:id="@+id/countryChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_row="1"
        android:text="Pays"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/countryChoiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="9"
        android:layout_gravity="center_horizontal|right"
        android:layout_margin="2dp"
        android:layout_row="1"
        android:onClick="showDatePicker"
        android:text="@string/pick_date" />

    <TextView
        android:id="@+id/cityChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_row="2"
        android:text="Ville"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/cityChoiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="9"
        android:layout_gravity="center_horizontal|right"
        android:layout_margin="2dp"
        android:layout_row="2"
        android:onClick="showDatePicker"
        android:text="@string/pick_date" />

</GridLayout>